<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sklad.er71">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ЭлектронныйРецепт71"
        android:usesCleartextTraffic="true">
        <activity android:name=".presentation.maps.MapsActivity"></activity>
        <activity
            android:name=".presentation.password_recover.PasswordRecoverActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.reg.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.menu.MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>